NAME		=	libftprintf.a

SRCS		=	ft_printf.c \
				scrape.c \
				output.c \
				utils.c

OBJS		=	$(SRCS:.c=.o)

$(NAME):	$(OBJS)
			ar rcs $(NAME) $(OBJS)

all:		$(NAME)

clean:
			$(RM) $(OBJS)

fclean:		clean
			$(RM) $(NAME)

re:			fclean $(NAME)

.PHONY:		all clean fclean re bonus
